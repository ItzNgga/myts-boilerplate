{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
  ],
  "exclude": ["node_modules"]
}
